{% load static %}
<script type="text/javascript" src="{% static "mc/js/property.js" %}"></script>
div
  div(id='property-container',class='row')
    div(class='row')
      label Property
    div(id='property-current', class='btn-group hidden')
    div(id='property-physical', class='hidden')
      form(class='form',role='form')
        div(class='row')
          label Node
        div(class='form-group')
          button(id='physical-add',type='button', class='btn btn-default',onclick='PhysicalAdd()') Add
          button(id='physical-delete',type='button', class='btn btn-default',onclick='PhysicalDelete()') Delete
        div(class='form-group')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') Solid:
            select(class='form-control',name='solid',onclick='InitSolidForm()',onchange='ChangeSolidType(this)')
                option box
                option tube
        div(class='form-group')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') Material:
            select(class='form-control',name='material')
                option H2
                option He
                option Li
                option H2O
                option Water
        div(class='form-group')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') Placement:
            select(class='form-control',name='placement',onclick='InitPlacementForm()',onchange='ChangePlacementType(this)')
                option Simple
  div(id='property-detail-container',class='row')
    div(class='row')
      label Detail
    div(id='property-detail-current', class='hidden')
    div(id='property-solid-box', class='hidden')
      div(class='row')
        label Box
      form(class='form',role='form',action='javascript:void(0);',onsubmit='OnBoxSubmit(this)')
        div(class='form-group')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') x:
            input(class='form-control',name='x')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') y:
            input(class='form-control',name='y')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') z:
            input(class='form-control',name='z')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') lunit:
            select(class='form-control',name='lunit')
                option m
                option cm
                option mm
                option km
        button(type='submit',class="btn btn-default") Save
    div(id='property-solid-tube', class='hidden')
      div(class='row')
        label Tube
      form(class='form',role='form',action='javascript:void(0);',onsubmit='OnTubeSubmit(this)')
        div(class='form-group')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') rmin:
            input(class='form-control',name='rmin')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') rmax:
            input(class='form-control',name='rmax')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') z:
            input(class='form-control',name='z')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') startphi:
            input(class='form-control',name='startphi')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') deltaphi:
            input(class='form-control',name='deltaphi')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') lunit:
            select(class='form-control',name='lunit')
                option m
                option cm
                option mm
                option km
          div(class='input-group input-group-sm')
            span(class='input-group-addon') aunit:
            select(class='form-control',name='aunit')
                option deg
                option rad
        button(type='submit',class="btn btn-default") Save
    div(id='property-placement-simple', class='hidden')
      div(class='row')
        label Placement
      form(class='form',role='form',action='javascript:void(0);',onsubmit='OnPlacementSimpleSubmit(this)')
        div(class='form-group')
          div(class='row')
            label Position
          div(class='input-group input-group-sm')
            span(class='input-group-addon') x:
            input(class='form-control',name='px')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') y:
            input(class='form-control',name='py')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') z:
            input(class='form-control',name='pz')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') lunit:
            select(class='form-control',name='lunit')
                option m
                option cm
                option mm
                option km
          div(class='row')
            label Rotation
          div(class='input-group input-group-sm')
            span(class='input-group-addon') x:
            input(class='form-control',name='px')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') y:
            input(class='form-control',name='py')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') z:
            input(class='form-control',name='pz')
          div(class='input-group input-group-sm')
            span(class='input-group-addon') aunit:
            select(class='form-control',name='aunit')
                option deg
                option rad
        button(type='submit',class="btn btn-default") Save
