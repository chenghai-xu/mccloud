div(id='property-volume', class='hidden')
  form(class='form',role='form')
    div(class='row')
      label(id='current-node-name') Volume
    div(class='row')
      //label Node
      div(class='btn-group')
        button(type='button',class='btn btn-sm dropdown-toggle',data-toggle="dropdown") Action 
          span(class='caret')
        ul(class='dropdown-menu',role='menu') 
          li
            a(id='new-node',href='#',onclick='VolumeAdd()') Add Child 
          li
            a(id='delete-node',href='#',onclick='VolumeDelete()') Delete Current  
    div(class='row')
      //div(class='form-group')
      //  button(id='volume-add',type='button', class='btn btn-default',onclick='VolumeAdd()') Add
      //  button(id='volume-delete',type='button', class='btn btn-default',onclick='VolumeDelete()') Delete
      div(class='form-group')
        div(class='input-group input-group-sm')
          span(class='input-group-addon') Name:
          input(class='form-control',name='name',onchange='ChangeVolumeName(this)')
        div(class='input-group input-group-sm')
          span(class='input-group-addon') Solid:
          select(class='form-control',name='solid',onclick='InitSolidForm()',onchange='ChangeSolidType(this)')
              option box
              option tube
              option sphere
        div(class='input-group input-group-sm')
          span(class='input-group-addon') Material:
          input(class='form-control',name='material')
        div(class='input-group input-group-sm')
          span(class='input-group-addon') Placement:
          select(class='form-control',name='placement',onclick='InitPlacementForm()',onchange='ChangePlacementType(this)')
              option simple

